@model OgrenciIsleri.Models.Ogretmenler
@{
    Layout = null;
}
<div class="col-lg-12">
    <br />
    <div style="font-size:17px; border:1px solid black; font-weight:bold" id="detay">
        <a class="nav navbar navbar-right btn" id="btnRef" style="font-size:25px">X</a>
        <br />
        <center>
            <img src="@Model.Fotograf" class="img-circle" width="150" />
        </center>
        <br />
        <ul class="list-group">
            <li class="list-group-item">
               Ad Soyad : @Model.Adsoyad
            </li>
            <li class="list-group-item">
               Branş : @Model.Bolumler.BolumAd
            </li>
            <li class="list-group-item">
               Cinsiyet : @Model.Cinsiyetler.Cinsiyet
            </li>
            <li class="list-group-item">
               Doğum Tarihi : @string.Format("{0:dd MMMMMMMM yyyy}", Model.DogumTarihi) 
            </li>
            <li class="list-group-item">
               E-Posta Adresi : @Model.Mail
            </li>
            <li class="list-group-item">
               Doğum Yeri : @Model.Sehirler.SehirAd
            </li>
            <li class="list-group-item">
               Telefon Numarası : @Model.Tel
            </li>
            <li class="list-group-item">
              Adres :  @Html.Raw(Model.Adres)
            </li>
        </ul>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $("#btnRef").click(function () {
            $("#detay").parent().remove();
        });
    });
</script>