@model OgrenciIsleri.ViewModel.NotVM
@{
    ViewBag.Title = "NotVer";
}
<div class="col-lg-12">
    <div class="container">
        <h2></h2>
        <div class="control-label">
            @foreach (var item in Model.Ogrenciler.ToList())
            {
                @Html.ValidationSummary()

                <center>
                    <ul class="list-group">
                        <li class="list-group-item"><img src="@item.Fotograf" width="150" /></li>
                        <li class="list-group-item">@item.Adsoyad</li>
                        <li class="list-group-item">@item.Bolumler.BolumAd</li>
                        <li class="list-group-item">@string.Format("{0:dd MMMMMMM yyyy}", item.DogumTarihi)</li>
                    </ul>
                    @using (Html.BeginForm("NotVer", "Not", FormMethod.Post))
                    {
                        <div class="form-group">
                            @Html.DropDownListFor(x => x.Not.DersID, new SelectList(Model.Ders, "ID", "DersAdı"), new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.Not.Notu, new { @class = "form-control", placeholder = "1.Sınav Notunu giriniz." })
                        </div>
                        <button type="submit" class="btn btn-success">Kaydet</button>
                    }

                </center>

            }
        </div>
    </div>
</div>

