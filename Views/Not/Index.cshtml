@model IEnumerable<OgrenciIsleri.Models.Ogrenciler>
@{
    ViewBag.Title = "Index";
}
<div class="col-lg-12">
    <br />
    @if (Model.Count() == 0)
    {
    <h1>@ViewBag.Ogryok</h1>
    }
    else
    {
        <h2>Öğrenci Listesi</h2>
        <hr />
        <div class="container">
            <table class="table table-bordered ">
                <thead>
                    <tr>
                        <th class="glyphicon glyphicon-picture" style=" width:56px"></th>
                        <th>Adı soyadı</th>
                        <th>Bölümü</th>
                        <th>Sınıfı</th>
                        <th>Not ver</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="width:55px"><img width="40" class="img-circle" src="@item.Fotograf" /></td>
                            <td>@item.Adsoyad</td>
                            <td>@item.Bolumler.BolumAd</td>
                            <td>@item.Sınıflar.SınıfNo</td>
                            <td>@Html.ActionLink("Not Ver", "NotVer", "Not", new { id = item.ID }, new { @class = "btn" })</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

</div>

