@model OgrenciIsleri.ViewModel.KullanıcıVM
    @{
        ViewBag.Title = "Create";
    }
    <div class="col-lg-12">
        <h2>Create</h2>
        <div class="container">
            @using (Html.BeginForm("Create", "Kullanici", FormMethod.Post))
            {
                @Html.ValidationSummary()

                <div class="form-group">
                    @Html.TextBoxFor(x => x.Kullanıcılar.KullanıcıAdi, new { @class = "form-control", placeholder = "Kullanıcı Adı" })
                    @Html.ValidationMessageFor(x => x.Kullanıcılar.KullanıcıAdi)
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(x => x.Kullanıcılar.Sifre, new { @class = "form-control", placeholder = "Şifre", type = "password" })
                    @Html.ValidationMessageFor(x => x.Kullanıcılar.Sifre)
                </div>
                <div class="form-group">
                    @Html.DropDownListFor(x => x.Kullanıcılar.OgretmenID, new SelectList(Model.Ogretmenlers, "ID", "Adsoyad"), new { @class = "form-control" })
                </div>
                <button type="submit" class="btn btn-success">Kaydet</button>
            }

        </div>
    </div>

